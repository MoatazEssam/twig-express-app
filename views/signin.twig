<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Yalla Take</title>
    <link rel="stylesheet" href="/css/signup.css">
		<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
		<!-- Animate.css -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
		<!-- AOS Library -->
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<!-- Almarai Font -->
		<link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap" rel="stylesheet">
		<!-- Swiper CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
		
</head>
<body>
    <div class="signup-page">
        

        <!-- Animation Section -->
        <div class="animation-section">
            <div class="animation-container">
                <div class="lottie-placeholder" id="lottie-animation">
                   	<dotlottie-player
									src="/lottie/jk3eVJPxR4.lottie"
									autoplay
									loop
								></dotlottie-player>
                </div>
            </div>
            
            <!-- Decorative Elements -->
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <div class="decoration decoration-3"></div>
        </div>

        <!-- Form Section -->
        <div class="form-section">
            <div class="form-container">
                <!-- Brand Section -->
                <div class="brand-section">
                    <img src = "/images/logo.png" class="brand-logo" />
                    <h1 class="brand-title">YallaTake</h1>
                    <p class="brand-subtitle">Welcome Back</p>
                </div>

                <!-- Signup Form -->
                <div class="signup-form">
                    <h2 class="form-title">Sign In</h2>
                    

                      <form {% if site['rtl'] %}class="rtl-form"{% endif %} method="post" action="{{ page['url'] }}">
          {% if error %}
            <div class="alert alert-dismissible alert-danger {% if site['rtl'] %} rtl-alert {% endif %}">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              {{ errorMessage }}
            </div>
          {% endif %}

          {% if success %}
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              {{successMessage}}
            </div>
          {% endif %}

          <div class="form-group">
            <label for="username" class="control-label">{{ lang('signup.username') }}</label>
            <input type="text" class="form-control" id="username" name="LoginForm[username]">
          </div>
          <div class="form-group form-group__password">
            <label for="password" class="control-label">{{lang('signup.password')}}</label>
            <input type="password" class="form-control" id="password" name="LoginForm[password]">
              {% if site['resetPassword'] %}
                <a href="{{ page_url('resetpassword') }}" class="forgot-password">{{ lang('signin.reset_password') }}</a>
              {% endif %}
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox"  name="LoginForm[remember]" value="1" id="remember">{{lang('signin.remember_me')}}
            </label>
          </div>

          {% if captcha %}
            {{ captchaCode }}
          {% endif %}

          <div class="row">
            <div class="col-md-6">
              <div class="form-inline">
                <input type="hidden" name="_csrf" value="{{csrftoken}}">
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">{{ lang('signin.button') }}</button>
                </div>
                {% if googleSignIn %}
                  <div class="form-group">
                    <div id="g_id_onload"
                       data-client_id="{{ googleClientId }}"
                       data-login_uri="{{ googleSignInRedirectUrl }}"
                       data-auto_prompt="false"
                       data-_csrf="{{csrftoken}}">
                    </div>
                    <div class="g_id_signin"
                       data-type="standard"
                       data-size="large"
                       data-theme="outline"
                       data-text="sign_in_with"
                       data-shape="rectangular"
                       data-logo_alignment="left">
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
            <div class="col-md-6 text-md-right">
              <span class="pull-right-middle">{{ lang('signin.text') }} <a href="{{ page_url('signup') }}">{{ lang('signup.title') }}</a></span>
            </div>
          </div>
        </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Close alert functionality
        document.querySelectorAll('.close').forEach(button => {
            button.addEventListener('click', function() {
                this.parentElement.style.display = 'none';
            });
        });

        // Add your Lottie animation initialization here
        // Example:
        // lottie.loadAnimation({
        //     container: document.getElementById('lottie-animation'),
        //     renderer: 'svg',
        //     loop: true,
        //     autoplay: true,
        //     path: 'path/to/your/animation.json'
        // });
    </script>
</body>
</html>
