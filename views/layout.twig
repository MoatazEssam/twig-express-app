										<a href="{{ menu['link'] }}" class="{% if menu['link'] == page['path'] %}active{% endif %}" {% if menu['external'] %} target="_blank" {% endif %}>
											{{ menu['name'] }}
										</a>
									</li>
								{% endif %}
