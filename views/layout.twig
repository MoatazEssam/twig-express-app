							<i class="fas fa-times"></i>
						</button>
					</div>
					<div class="mobile-content">
						<ul class="mobile-nav">
							{% for menu in site['menu'] %}
								<li>
									<a href="{{ menu['link'] }}" class="{% if menu['link'] == page['path'] or (menu['link'] == '/' and page['path'] is not defined) %}active{% endif %}" {% if menu['external'] %} target="_blank" {% endif %}>
										{% if menu['icon'] %}
											<i class="{{ menu['icon'] }}"></i>
										{% endif %}
										{{ menu['name'] }}
									</a>
								</li>
							{% endfor %}
							{% for menu in site['account_menu'] %}
